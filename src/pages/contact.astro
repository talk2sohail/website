		<style>
			h1 {
				font-size: 2rem;
				font-weight: bolder;
				margin-bottom: 1rem;
			}
			p {
				line-height: 1.6;
			}
			.identities {
				margin-top: 2rem;
			}
			.identities h2 {
				font-size: 1.5rem;
				font-weight: bolder;
				margin-bottom: 1rem;
			}
			.identities ul {
				list-style: disc;
				padding-left: 20px;
			}
			.identities li {
				margin-bottom: 0.5rem;
				margin-left: 1rem;
			}
			a {
				color: var(--accent1);
				text-decoration: none;
			}
			a:hover {
				text-decoration: underline;
			}
			.note {
				margin-top: 2rem;
				font-size: 0.9rem;
			}
		</style>
	</main>
</Layout>
